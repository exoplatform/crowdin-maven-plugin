<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>crowdin</artifactId>
    <groupId>org.exoplatform.crowdin</groupId>
    <version>4.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>platform-translation</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform Translations</name>
  <properties>
    <exo.crowdin.properties>${project.basedir}/src/config/crowdin.properties</exo.crowdin.properties>
    <!-- exo.crowdin.project.id and exo.crowdin.project.key are set in settings.xml -->
    <!--exo.crowdin.upload-translation.properties>upload-translation/upload-translation.properties</exo.crowdin.upload-translation.properties-->
  </properties>
  <profiles>
    <profile>
      <id>init</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>init</id>
                <phase>initialize</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/init-prepare.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
              <execution>
                <id>post-process</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/post-process.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
              <execution>
                <id>reset</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/reset-local.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>init</id>
                <phase>compile</phase>
                <goals>
                  <goal>init</goal>
                </goals>
                <configuration>
                  <startDir>${project.basedir}/eXoProjects/</startDir>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
