<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>crowdin</artifactId>
    <groupId>org.exoplatform.crowdin</groupId>
    <version>4.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>platform-translation</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform Translations</name>
  <properties>
    <!-- exo.crowdin.project.id and exo.crowdin.project.key are set in settings.xml -->
    <!--exo.crowdin.upload-translation.properties>upload-translation/upload-translation.properties</exo.crowdin.upload-translation.properties-->
  </properties>
  <profiles>
    <profile>
      <!-- PLF 4.0.x Translations-->
      <id>plf40</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <configuration>
	    <!-- Boolean to activate new language or add new properties (true/false)-->
	    <isActivate>false</isActivate>
              <!-- Languages to apply in projects -->
              <!-- Can be set with command line arg -Dlangs=fr,en -->
              <!-- ALL By default, list computed from the archive -->
              <languages>	      
                <language>en</language>
                <language>fr</language>
                <language>ar</language>
                <language>ja</language>
                <language>de</language>
                <language>vi</language>
                <language>sv-SE</language>
                <language>it</language>
                <language>pt-BR</language>
                <language>es-ES</language>
                <language>ru</language>
                <language>tr</language>
              </languages>
              <!-- Projects to manage -->
              <sourcesRepositories>
                <sourcesRepository>
                  <uri>git@github.com:exodev/platform-ui.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>platform-ui-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/commons.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>commons-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/ecms.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>ecms-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/social.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>social-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/calendar.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>calendar-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/wiki.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>wiki-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/forum.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>forum-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/integration.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>integration-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/platform.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>platform-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exoplatform/gatein-portal.git</uri>
                  <branch>feature/3.5.x-PLF-translation</branch>
                  <localDirectory>gatein-portal-3.5.x</localDirectory>
                </sourcesRepository>
              </sourcesRepositories>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile download-translations does
    * download-translations mojo
    -->
    <profile>
      <id>download-translations</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>download-translations</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>download-translations</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile update does
    * initialize mojo
    * download-translations mojo
    * update-sources mojo
    -->
    <profile>
      <id>update-sources</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>initialize</id>
                <phase>initialize</phase>
                <goals>
                  <goal>initialize</goal>
                </goals>
              </execution>
              <execution>
                <id>download-translations</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>download-translations</goal>
                </goals>
              </execution>
              <execution>
                <id>update</id>
                <phase>compile</phase>
                <goals>
                  <goal>update-sources</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile update-crowdin does
    * initialize mojo
    * update-crowdin mojo
    -->
    <profile>
      <id>update-crowdin</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>initialize</id>
                <phase>initialize</phase>
                <goals>
                  <goal>initialize</goal>
                </goals>
              </execution>
              <execution>
                <id>update-crowdin</id>
                <phase>compile</phase>
                <goals>
                  <goal>update-crowdin</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile init does
    * initialize mojo
    * init-crowdin mojo
    -->
