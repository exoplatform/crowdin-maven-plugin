    <!--
    Profile upload-translation does
    * initialize mojo
    * upload-translation mojo
    -->
    <profile>
      <id>upload-translation</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>initialize</id>
                <phase>initialize</phase>
                <goals>
                  <goal>initialize</goal>
                </goals>
              </execution>
              <execution>
                <id>upload-translation</id>
                <phase>compile</phase>
                <goals>
                  <goal>upload-translation</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile upload-translation does
    * restore-translation mojo
    -->
    <profile>
      <id>restore-translation</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>restore-translation</id>
                <phase>compile</phase>
                <goals>
                  <goal>restore-translation</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
